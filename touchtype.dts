/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>
#include <dt-bindings/gpio/gpio.h> // 1. 提供了 GPIO 宏
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "touchtype Keyboard";
	compatible = "touchtype", "nordic,nrf52832-qfaa", "nordic,nrf52832";

	chosen {
		//zephyr,console = &uart0;
		//zephyr,shell-uart = &uart0;
		//zephyr,uart-mcumgr = &uart0;
		//zephyr,bt-mon-uart = &uart0;
		//zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
        zephyr,code-partition = &slot0_partition;
        zmk,kscan = &kscan;
        zmk,matrix-transform = &transform;
        zmk,battery = &vbatt;
	};

    transform: transform {
        compatible = "zmk,matrix-transform";
        rows = <9>;
        columns = <10>;

        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8)
        RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8)
        RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4) RC(5,5) RC(5,6) RC(5,7) RC(5,8)
        RC(6,0) RC(6,1) RC(6,2) RC(6,3) RC(6,4) RC(6,5) RC(6,6) RC(6,7) RC(6,8)
        RC(7,0) RC(7,1) RC(7,2) RC(7,3) RC(7,4) RC(7,5) RC(7,6) RC(7,7) RC(7,8)
        RC(8,0) RC(8,1) RC(8,2) RC(8,3) RC(8,4) RC(8,5) RC(8,6) RC(8,7) RC(8,8)
        RC(9,0) RC(9,1) RC(9,2) RC(9,3) RC(9,4) RC(9,5) RC(9,6) RC(9,7) RC(9,8)
        >;

    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;

        // todo
        row-gpios
            = <&gpio0 2 GPIO_ACTIVE_LOW>
            , <&gpio0 3 GPIO_ACTIVE_LOW> 
            //, <&gpio0 4 GPIO_ACTIVE_LOW>  P0.04 口用不了
            , <&gpio0 5 GPIO_ACTIVE_LOW>
            , <&gpio0 6 GPIO_ACTIVE_LOW>
            , <&gpio0 7 GPIO_ACTIVE_LOW>
            , <&gpio0 8 GPIO_ACTIVE_LOW>
            , <&gpio0 9 GPIO_ACTIVE_LOW>
            , <&gpio0 10 GPIO_ACTIVE_LOW>
            , <&gpio0 11 GPIO_ACTIVE_LOW>
            , <&gpio0 12 GPIO_ACTIVE_LOW>
        ;
        col-gpios
            = <&gpio0 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 19 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpio0 22 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // P0.21 是reset 键，用不了
        ;
    };


    vbatt: vbatt {
        compatible = "zmk,battery-voltage-divider";
        // 我使用的 P0.29 对应 AIN5 通道，所以这里是 &adc 5
        io-channels = <&adc 5>;
        output-ohms = <100000>;
        full-ohms = <200000>;
        status = "okay";
    };

    

};

&uicr {
    nfct-pins-as-gpios;
    gpio-as-nreset;
};

&adc {
	status ="okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&pinctrl {

    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 25)>,
                <NRF_PSEL(TWIM_SCL, 0, 26)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 25)>,
                <NRF_PSEL(TWIM_SCL, 0, 26)>;
            low-power-enable;
        };
    };

};

&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-frequency = <I2C_BITRATE_FAST>;

    xw12a: xw12a@0x40 {
        compatible = "xinwang,xw12a";
        reg = <0x40>;
        inter-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>;
    };


};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x0003E000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x00070000 0xa000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007a000 0x00006000>;
		};
	};
};


